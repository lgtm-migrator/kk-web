    "use-http": "1.0.13",
    "yup": "0.29.2"
  },
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run precommit"
    }
  },
  "lint-staged": {
    "**/*.ts?(x)": "npm run lint",
    "**/*.scss": "npm run stylelint"
  },
  "scripts": {
    "build": "npm run build:fonts && gatsby build",
    "build:fonts": "ts-node --project pdfmake/tsconfig.json pdfmake/buildFonts.ts",
    "deploy": "firebase deploy --only hosting",
    "develop": "gatsby develop",
    "format": "prettier --write \"**/*.{ts,tsx,scss,md}\"",
    "format:staged": "pretty-quick --staged --pattern \"**/*.*(ts|tsx|scss|md)\"",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1",
    "lint": "eslint --fix --ext .ts,.tsx src/",
    "lint:staged": "lint-staged",
    "stylelint": "stylelint \"**/*.scss\" --fix",
    "precommit": "npm run format:staged && npm run lint:staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/piro0919/kk-web2"
  },
  "bugs": {
    "url": "https://github.com/piro0919/kk-web2/issues"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app",
      "plugin:jsx-a11y/strict",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "paths": "src"
        }
      }
    },
    "rules": {
      "no-alert": "error",
      "no-console": "error",
      "no-var": "error",
      "import/order": [
        "error",
        {
          "newlines-between": "always"
        }
      ],
      "react/jsx-fragments": [
        "error",
        "syntax"
      ],
      "react/jsx-sort-props": [
        "error"
      ],
      "sort-keys": "error"
    }
  },
  "importSort": {
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "eslint"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-sass-guidelines",
      "stylelint-prettier/recommended"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "at-rule-empty-line-before": [
        "always",
        {
          "except": [
            "blockless-after-same-name-blockless"
          ]
        }
      ],
      "color-named": [
        "never",
        {
          "ignore": [
            "inside-function"
          ]
        }
      ],
      "prettier/prettier": true
    }
  }
}
